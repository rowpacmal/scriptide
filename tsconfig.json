{
  "files": [],
  "references": [
    /* Comment this out because it prevented building the app.
     * This was added together with the 'Mappings' options below,
     * following the installation steps for shadcn/ui library.
     */
    // {
    //   "path": "./tsconfig.app.json"
    // },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    /* Basic options */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": false,

    /* Mappings */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
